@page "{fileId:int}"
@model Azure_FileExplorerApp.Pages.Files.FilesDeleteModel

@{
    ViewData["Title"] = "Видалити файл";
}

<h1>Видалити файл</h1>

<p>Ви дійсно хочете видалити файл "<strong>@Model.FileMetadata.FileName</strong>"?</p>

<form method="post">
    <button type="submit" class="btn btn-danger btn-sm mt-3 me-2">Видалити</button>
    <a asp-page="/Files/Index" asp-route-folderId="@Model.FolderId" class="btn btn-secondary btn-sm mt-3">Назад</a>
</form>
