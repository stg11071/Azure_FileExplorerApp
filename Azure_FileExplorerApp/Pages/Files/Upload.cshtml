@page "{folderId:int}"
@model Azure_FileExplorerApp.Pages.Files.FilesUploadModel

@{
    ViewData["Title"] = "Завантажити файл";
}

<h1>Завантажити файл</h1>

<form enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="file">Оберіть файл:</label>
        <input type="file" id="file" name="file" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-3 btn-sm me-2">Завантажити</button>
    <a asp-page="/Files/Index" asp-route-folderId="@Model.FolderId" class="btn btn-secondary mt-3 btn-sm">Назад</a>
</form>
