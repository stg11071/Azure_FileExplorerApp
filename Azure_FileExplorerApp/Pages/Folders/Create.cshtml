@page
@model Azure_FileExplorerApp.Pages.Folders.FoldersCreateModel

@{
    ViewData["Title"] = "Створити нову папку";
}

<h1 class="text-center mt-5">Створити нову папку</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Folder.Name"></label>
        <input asp-for="Folder.Name" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Створити</button>
</form>
